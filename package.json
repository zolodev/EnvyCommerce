{
  "name": "envy-commerce",
  "version": "0.1.0",
  "private": true,
  "license": "GNU General Public License v3 (GPL-3)",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "yarn clean && yarn build && next start",
    "test": "jest --watch",
    "coverage": "jest --coverage",
    "dev:export": "yarn export && cd ./dist && python -m http.server --bind localhost",
    "export": "yarn build && next export -o dist",
    "build-prod": "yarn clean && yarn build && yarn export",
    "clean": "rm -rf ./.next && rm -rf ./dist && rm -rf ./.coverage && rm -rf ./.husky && rm ./public/preCompiledSearchIndex.json && rm ./public/products.json",
    "lint": "yarn next lint",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable",
    "predev": "node ./scripts/PreCompileProducts.js && node ./scripts/generate-sitemap.js",
    "prebuild": "node ./scripts/PreCompileProducts.js && node ./scripts/generate-sitemap.js"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "fuse.js": "^6.4.6",
    "gray-matter": "^4.0.3",
    "marked": "^4.0.10",
    "next": "^12.1.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-markdown": "^8.0.0",
    "remark-gfm": "^3.0.1",
    "slugify": "^1.5.1"
  },
  "devDependencies": {
    "@testing-library/dom": "^8.0.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.1.9",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "@types/react": "^17.0.4",
    "@types/react-dom": "^17.0.11",
    "@types/typescript": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "autoprefixer": "^10.2.5",
    "dotenv": "^16.0.0",
    "eslint": "^8.9.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-next": "^12.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^26.1.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^7.0.4",
    "jest": "^27.0.5",
    "lint-staged": "^12.3.4",
    "next-build-id": "^3.0.0",
    "pinst": "^3.0.0",
    "postcss": "^8.4.31",
    "prettier": "^2.2.1",
    "tailwindcss": "^3.0.23"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn add eslint --ext .tsx --ext .ts src/ --fix",
      "prettier --write"
    ],
    "*.json": [
      "yarn add eslint --ext .tsx --ext .ts src/ --fix",
      "prettier --write"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    }
  },
  "eslintIgnore": [
    "next.config.js",
    "tailwind.config.js",
    "*.test.ts*"
  ],
  "jest": {
    "clearMocks": true,
    "coverageDirectory": ".coverage",
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.ts"
    ],
    "testEnvironment": "jsdom"
  },
  "main": "index.js"
}
