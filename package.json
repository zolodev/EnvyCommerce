{
  "name": "envy-commerce",
  "version": "0.1.0",
  "private": true,
  "license": "GNU General Public License v3 (GPL-3)",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "yarn clean && yarn build && next start",
    "test": "jest --watch",
    "coverage": "jest --coverage",
    "dev:export": "yarn export && cd ./dist && python -m http.server --bind localhost",
    "export": "yarn build && next export -o dist",
    "build-prod": "yarn clean && yarn build && yarn export",
    "clean": "rm -rf ./.next && rm -rf ./dist && rm -rf ./.coverage && rm -rf ./.husky && rm ./public/preCompiledSearchIndex.json && rm ./public/products.json",
    "lint": "yarn next lint",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable",
    "predev": "node ./scripts/PreCompileProducts.js && node ./scripts/generate-sitemap.js",
    "prebuild": "node ./scripts/PreCompileProducts.js && node ./scripts/generate-sitemap.js"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "fuse.js": "^6.4.6",
    "gray-matter": "^4.0.3",
    "marked": "^2.0.3",
    "next": "^11.1.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-markdown": "^6.0.2",
    "remark-gfm": "^1.0.0",
    "slugify": "^1.5.1"
  },
  "devDependencies": {
    "@testing-library/dom": "^8.0.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.1.9",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.0.1",
    "@types/react": "^17.0.4",
    "@types/react-dom": "^16.0.4",
    "@types/typescript": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "autoprefixer": "^10.2.5",
    "dotenv": "^10.0.0",
    "eslint": "^7.25.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-next": "^11.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^6.0.0",
    "jest": "^27.0.5",
    "lint-staged": "^10.5.4",
    "next-build-id": "^3.0.0",
    "pinst": "^2.1.6",
    "postcss": "^8.2.12",
    "prettier": "^2.2.1",
    "tailwindcss": "^2.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn add eslint --ext .tsx --ext .ts src/ --fix",
      "prettier --write"
    ],
    "*.json": [
      "yarn add eslint --ext .tsx --ext .ts src/ --fix",
      "prettier --write"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    }
  },
  "eslintIgnore": [
    "next.config.js",
    "tailwind.config.js",
    "*.test.ts*"
  ],
  "jest": {
    "clearMocks": true,
    "coverageDirectory": ".coverage",
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.ts"
    ],
    "testEnvironment": "jsdom"
  },
  "main": "index.js"
}
