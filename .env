# NEXT_PUBLIC_PRODUCT_ADD_TO_CART_DISPLAY_TEXT="Lägg till"
# NEXT_PUBLIC_PRODUCT_CHECKOUT_DISPLAY_TEXT="Gå till kassan"
# NEXT_PUBLIC_PRODUCT_PROCESS_PAYMENT_DISPLAY_TEXT="Process Payment"

# Set local format for example "en-US" (default) or "sv-SE" to override
NEXT_PUBLIC_LOCALES_LANGUAGE="en"
NEXT_PUBLIC_LOCALES="sv-SE"
NEXT_PUBLIC_CURRENCY="SEK"

# Search filter by product keys
NEXT_PUBLIC_FILTER_KEYS="name,description"

# This markdown text is a short information to the customer that appears on the product detail page above the "Add to cart" button
NEXT_PUBLIC_GENERAL_LICENSE="You can read more about our conditions and shipping deals in our [customer service page](/customer-service/)."
